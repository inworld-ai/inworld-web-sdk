{
  "git": {
    "commitMessage": "chore: @inworld/web-core ${version}",
    "requireBranch": "main",
    "tagName": "@inworld/web-core@${version}",
    "tagAnnotation": "@inworld/web-core ${version}"
  },
  "github": {
    "release": true,
    "releaseName": "@inworld/web-core ${version}"
  },
  "hooks": {
    "before:init": [
      "git pull",
      "yarn install",
      "yarn build",
      "yarn lint:check",
      "yarn prettier:check",
      "yarn test"
    ]
  },
  "npm": {
    "publish": false
  },
  "plugins": {
    "@release-it/keep-a-changelog": {
      "filename": "CHANGELOG.md"
    }
  }
}
