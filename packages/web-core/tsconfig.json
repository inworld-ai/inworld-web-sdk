{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "rootDirs": ["src"],
    "declaration": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "build",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "es5",
    "types": ["jest", "node"],
  },
  "include": [
    "src/**/*",
    "proto/**/*",
    "./package.json"
  ],
  "exclude": [
    "node_modules"
  ]
}
