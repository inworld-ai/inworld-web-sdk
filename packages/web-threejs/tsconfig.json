{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "rootDirs": [
      "src"
    ],
    "declaration": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "build",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "es5",
    "types": [
      "node"
    ],
  },
  "include": [
    "src/**/*",
    "./package.json"
  ],
  "exclude": [
    "node_modules"
  ]
}