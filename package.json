{
  "name": "@inworld/web-sdk",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "author": {
    "name": "Theai, Inc.",
    "url": "https://www.inworld.ai"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/inworld-ai/inworld-web-sdk.git"
  },
  "scripts": {
    "lint:check": "eslint --cache  \"./**/*.{js,jsx,ts,tsx}\" --ignore-path .eslintignore",
    "lint:fix": "yarn run lint:check --fix",
    "prettier:check": "yarn prettier --check \"./**/*.{js,jsx,ts,tsx}\" --ignore-path .eslintignore",
    "prettier:format": "yarn prettier --write \"./**/*.{js,jsx,ts,tsx}\" --ignore-path .eslintignore",
    "prepare": "husky install",
    "test": "yarn workspace @inworld/web-core test"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "@release-it/keep-a-changelog": "^4.0.0",
    "@types/jest": "^29.2.0",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "eslint": ">=5.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-markdown": "^2.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^29.3.1",
    "jest-websocket-mock": "^2.4.0",
    "prettier": "^2.7.1",
    "release-it": "^16.1.4",
    "ts-jest": "^28.0.7",
    "ts-loader": "^9.4.1",
    "typescript": "^4.7.4",
    "webpack": "^5.74.0"
  }
}
